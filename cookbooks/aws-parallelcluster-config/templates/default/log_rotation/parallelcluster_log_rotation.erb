  missingok
  notifempty
  nodateext
  size 10M
  rotate 1
  copytruncate
}
<% if node['cluster']['scheduler'] == 'slurm' -%>
/var/log/parallelcluster/computemgtd {
  missingok
  notifempty
  nodateext
  size 10M
  rotate 1
  su root root
  postrotate
    pkill --signal=SIGUSR2 supervisord
    echo 0
  endscript
  create 0644 root root
}
<%# slurmd log %>
/var/log/slurmd.log {
  rotate 1
  size 10M
  missingok
  notifempty
  postrotate
    pkill --signal=SIGUSR2 slurmd
    echo 0
  endscript
}
<% end -%>
<% end -%>
